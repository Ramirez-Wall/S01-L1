#Classe base Musico
class Musico
  attr_reader :nome, :instrumento

  def initialize(nome, instrumento)
    @nome = nome
    @instrumento = instrumento
  end

  #Método abstrato — deve ser sobrescrito nas subclasses
  def tocar_partitura(peca)
    raise NotImplementedError, "O método tocar_partitura deve ser implementado nas subclasses."
  end

  def to_s
    "#{@nome} (#{@instrumento})"
  end
end

#Classes filhas Pianista e Violinista
class Pianista < Musico
  def initialize(nome)
    super(nome, "Piano")
  end

  def tocar_partitura(peca)
    "#{@nome} toca a peça '#{peca}' ao piano com emoção."
  end
end

class Violinista < Musico
  def initialize(nome)
    super(nome, "Violino")
  end

  def tocar_partitura(peca)
    "#{@nome} interpreta '#{peca}' com o som suave do violino."
  end
end

#Classe Maestro
class Maestro
  def initialize(nome, musicos)
    @nome = nome
    @musicos = musicos
  end

  #Método iniciar_ensaio(peca)
  def iniciar_ensaio(peca)
    puts "\n Maestro #{@nome} inicia o ensaio da peça '#{peca}'..."
    @musicos.each do |musico|
      puts musico.tocar_partitura(peca)  # Polimorfismo em ação
    end
  end

  #Método mudar_foco(estado)
  def mudar_foco(estado)
    @musicos.map do |musico|
      "#{musico.nome} agora está #{estado}!"
    end
  end
end

#Main
puts "Digite o nome da peça a ser ensaiada:"
peca = gets.chomp

#Cria músicos
musicos = [
  Pianista.new("Kousei"),
  Violinista.new("Kaori")
]

#Cria o maestro
maestro = Maestro.new("Takeshi", musicos)

#Inicia o ensaio
maestro.iniciar_ensaio(peca)

#Muda o foco dos músicos
puts "\n--- Mudando foco dos músicos ---"
mensagens_foco = maestro.mudar_foco("Concentrado")
mensagens_foco.each { |msg| puts msg }
