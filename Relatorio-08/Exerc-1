class Personagem:
    def __init__(self, vida: int, resistencia: int):
        self._vida = vida
        self._resistencia = resistencia

    #Getter e Setter para 'vida'
    @property
    def vida(self):
        return self._vida

    @vida.setter
    def vida(self, valor):
        if valor < 0:
            self._vida = 0
        else:
            self._vida = valor

    def __str__(self):
        return f"Personagem com {self._vida} de vida e {self._resistencia} de resistÃªncia."


class Cavaleiro(Personagem):
    def __init__(self, vida: int, resistencia: int, armadura_pesada: bool):
        super().__init__(vida, resistencia)
        self.armadura_pesada = armadura_pesada

    def __str__(self):
        tipo_armadura = "armadura pesada" if self.armadura_pesada else "armadura leve"
        return f"Cavaleiro com {self._vida} de vida, {self._resistencia} de resistÃªncia e {tipo_armadura}."

p = Personagem(250, 50)
print(p)

c = Cavaleiro(300, 80, True)
print(c)

c.vida = 0
print(c)  
